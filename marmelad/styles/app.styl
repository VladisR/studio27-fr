@require 'components/_variables';
@require 'components/_mixins';
@require 'components/normalize';
@require 'components/iconizer';
@require 'components/fonts';
// @require 'components/wordpress';

*
  min-width 0
  min-height 0
  box-sizing: border-box
  -webkit-tap-highlight-color rgba(0,0,0, 0)

  &::before,
  &::after
    box-sizing: border-box

html
  scroll-behavior smooth

  font-family sans-serif
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  // -webkit-font-smoothing antialiased
  // -ms-text-size-adjust 100%

body
  font-family: $body.fontFamily
  font-weight: $body.fontWeight
  line-height: $body.lineHeight
  font-size: 16px
  color: $body.color
  background-color: $body.bgc
  @media (min-width: $mq.md)
    font-size: $body.fontSize
svg:not(:root)
  overflow hidden

blockquote
  padding: 20px
  margin 30px 0
  padding-left: 20px
  border-left: 5px solid $colors.theme
  background-color: rgba($colors.theme, .03)

img
  max-width 100%
  height auto

.theme-color
  color: $colors.theme

/**
 * The CSS class screen-reader-text
 *
 * @link https://make.wordpress.org/accessibility/handbook/markup/the-css-class-screen-reader-text/
 */
.visuallyhidden,
.screen-reader-text,
.sr-only
  border: 0
  clip: rect(1px, 1px, 1px, 1px)
  clip-path: inset(50%)
  height: 1px
  margin: -1px
  overflow: hidden
  padding: 0
  position: absolute
  width: 1px
  word-wrap: normal !important

  &:active,
  &:focus
    background-color: #eee
    clip: auto !important
    clip-path: none
    color: #444
    display: block
    font-size: 1em
    height: auto
    left: 5px
    line-height: normal
    padding: 15px 23px 14px
    text-decoration: none
    top: 5px
    width: auto
    z-index: 100000 /* Above WP toolbar. */

.overflow-hidden
  overflow hidden

.container
  width 100%
  max-width $appWidth
  margin-left auto
  margin-right auto
  padding-left 20px
  padding-right 20px
  @media (min-width: $mq.xl)
    padding-left $appGutter
    padding-right $appGutter

nav
  ul
    padding 0
    margin 0
    list-style none

h1, .h1,
h2, .h2,
h3, .h3,
h4, .h4,
h5, .h5,
h6, .h6
  color #000
  line-height 0.9
  font-family: $fonts.headings

h1, .h1
  margin-top 0
  font-size 36px
  margin-bottom 11px
  font-family: $fonts.base
  text-align center
  letter-spacing: -0.01em;
  @media (min-width: $mq.lg)
    font-size 90px
    margin-bottom 29px

.h2,
.h3,
.h4,
.h5,
.h6
  margin-top 0

h2, .h2
  font-size 21px
  margin-bottom 22px
  @media (min-width: $mq.lg)
    font-size 40px
    margin-bottom 45px


h3, .h3
  margin-bottom 20px
  font-size 18px
  @media (min-width: $mq.lg)
    font-size 38px
    margin-bottom 25px

h4, .h4
  margin-bottom 20px
  font-size 16px
  @media (min-width: $mq.lg)
    font-size 36px
    margin-bottom 27px

h5, .h5,
h6, .h6
  margin-bottom 20px
  font-size 15px
  @media (min-width: $mq.lg)
    font-size 36px
    margin-bottom 20px
    margin-top 20px

a
  color: $linksColors
  &:hover
    text-decoration none

p
  margin-top 1em
  margin-bottom 1em
  &:first-child
    margin-top 0
  &:last-child
    margin-bottom 0

.button
  padding 8px 20px 10px
  text-decoration none
  display inline-block
  line-height 1
  border 0
  color #000
  background #eee
  cursor pointer
  transition 0.2s ease background, 0.2s ease color
  &:hover
    background #000
    color #fff


@require '../_blocks/**/*.styl';
@require 'components/_keyframes';
