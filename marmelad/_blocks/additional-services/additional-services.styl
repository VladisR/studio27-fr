.additional-services
    margin-bottom 52px
    color #000000
    font-weight 400
    &__container
        margin-bottom 37px
    &__title
        font-size 29px
        font-weight 400
        margin-bottom 23px
        line-height 1
    &__image
        text-align center
    &__price
        font-size 35px
        padding-bottom 15px
        margin-bottom 16px
        border-bottom 1px solid #D9D9D9
        font-weight 400
        line-height 1
    &__title2
        margin-bottom 26px
        font-weight 500
        font-size 21px
    &__item
        margin-bottom 13px
        &-name
            font-size 16px
            margin-right 20px
        &-value
            font-size 18px
            min-width 100px
            margin-left auto
        &-label
            padding-left 34px
            display flex
            position relative
            cursor pointer
            input
                position absolute
                left 0
                opacity 0
            .item-marker
                position absolute
                left 0
                top -3px
                width 20px
                height 20px
                border: 1px solid #C0CCDA;
                border-radius 4px

            input:checked + .item-marker
                border-color transparent
                background #09BA8F url(../img/checkbox-marker.svg) center center no-repeat



    .site-button
        min-width 238px
        margin-top 15px
        font-size 18px
        .svg-icon
            width 30px
            height 17px
            margin-left 25px
            margin-top 1px
    @media (min-width: $mq.sm)
        &__item
            &-name,
            &-value
                width 50%

    @media (min-width: $mq.md)
        display flex
        &__container
            width 45%
            margin-right 30px
            margin-bottom 0
            display flex
            flex-direction column
        &__title
            flex none
        &__values
            flex 1
        &__price
            border 0
            padding-bottom 10px
        &__image
            height 100%
            display flex
            justify-content center
            align-items center
        &__item
            &-label
                padding-left 40px
            .item-marker
                width 23px
                height 23px
                border-radius 5px
                top -2px
    @media (min-width: $mq.lg)
        &__container
            width 50%
        &__title,
        &__price
            font-size 50px

        &__price
            padding-top 5px
        &__title2
            font-size 30px
            margin-bottom 30px
        &__item
            margin-bottom 11px
            &-name
                font-size 19px
            &-value
                font-size 20px

        .site-button
            margin-top 28px
            font-size 21px
            padding-top 13px
            padding-bottom 15px
            min-width 290px
            .svg-icon
                margin-top 4px

    @media (min-width: $mq.xl)
        margin-bottom 123px
        &__container
            margin-right 40px
            width 37%
        &__values
            max-width 603px
