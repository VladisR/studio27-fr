.tooltip
    display inline-block
    vertical-align middle
    position relative
    margin-left 7px
    white-space normal
    &:hover
        & ^[0]
            &__icon
                color #fff
                background #09BA8F
            &__dropdown
                display block
    &__icon
        width 17px
        height 17px
        border 1px solid #09BA8F
        border-radius 50px
        display flex
        justify-content center
        align-items center
        font-size 12px
        font-weight 500
        color #09BA8F
        cursor pointer
    &__dropdown
        display none
        position absolute
        left 50%
        width 220px
        transform translateX(-50%)
        bottom -1%
        font-size 14px
        line-height 1.2
        padding 20px
        margin-bottom 25px
        background #fff
        color #000
        box-shadow: 0 0 10px rgba(#000, 0.25)
        text-align center
        &:after
            content ''
            position absolute
            left 50%
            top -18px
            margin-left -11px
            border 12px solid transparent
            border-bottom 6px solid #fff
        &:before
            content ''
            position absolute
            left 0
            top -10px
            right 0
            height 10px
