.work-performed
    margin-bottom 35px
    color #000
    &__title
        margin-top 0
        font-family $fonts.base
        margin-bottom 20px
        font-size 25px
        font-weight 400
        letter-spacing: -0.03em;
        line-height 1.1
        max-width 330px
        letter-spacing: -0.03em;
    &__price
        font-size 27px
        margin-bottom 27px
        font-weight 500
    &__item
        display flex
        padding 0 0 0 32px
        border-bottom: 1px solid #E6E6E6;
        padding-bottom 18px
        margin-bottom 18px
        position relative
        &:last-child
            border 0
        &:before
            content ''
            position absolute
            left 0
            top 1px
            width 17px
            height 17px
