            background-size 100%
        &-name
            font-size 15px
            margin-right auto
            width 50%
        &-value
            min-width 75px
            font-size 16px
            font-weight 400
    @media (min-width: $mq.md)
        &__title
            font-size 37px
            max-width none
            margin-bottom 15px
        &__price
            font-size 40px
            margin-bottom 35px
            font-weight 400
        &__item
            padding-left 52px
            &:before
                width 27px
                height 27px
            &-name
                font-size 22px
                width 65%
            &-value
                font-size 27px
    @media (min-width: $mq.lg)
        margin-top 40px
        &__title
            font-size 45px
            margin-bottom 10px
        &__price
            font-size 50px
            margin-bottom 50px

        &__item
            &-value
                min-width 160px

    @media (min-width: $mq.xl)
        &__container
            display flex

        &__price
            width 30.1%
            min-width 350px
        &__items
            padding-top 20px
            flex 1

        &__item
            &-name
                width auto
