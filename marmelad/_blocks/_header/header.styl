// body
//     background #000

.header
    flex none
    padding-top 53px
    &__content
        left 0
        top 0
        right 0
        position fixed
        min-width 320px
    &__top
        background #fff
        z-index 1
        display flex
        align-items center
        &-in
            min-height 53px
            display flex
    &__logo
        font-family $font2
        font-size 28px
        width 152px
        padding-right 15px
        margin-right auto
        align-self: center;
        a, img
            display block
    &__burger
        width 32px
        height 17px
        cursor pointer
        margin-left 19px
        align-self: center;
        .svg-icon
            pointer-events none
            width 100%
            height 100%
            display block
            fill #000
    &__phone
        font-size 0
        padding-left 15px
        border-left 1px solid #DACECE
        display flex
        align-items center
        .svg-icon
            width 21px
            height 21px
            fill #000
    .social-links
        border-left 1px solid #DACECE
        padding 0 10px
        &__item
            margin-right 12px
            &:last-child
                margin-right 0
    &__search,
    &__address-box
        display none

    &__menu
        > ul
            white-space nowrap
            overflow-x auto
            margin-left -20px
            margin-right -20px
            padding-left 20px
            padding-right 20px
            &:after
                content ''
                position absolute
                left 20px
                right 0
                bottom 0
                height 1px
                background #09BA8F
            &::-webkit-scrollbar
                display none

            scrollbar-height none
            -ms-overflow-style: none;
            > li
                display inline-block
                margin-right 32px
                &:last-child
                    margin-right 0
                > a
                    font-size 15px
                    font-weight 400
                    color #fff
                    padding-top 16px
                    padding-bottom 17px
                    text-decoration none
                    display block
                    position relative
                    padding-right 15px
                    .svg-icon
                        width 12px
                        height 6px
                        position absolute
                        right 0
                        top 50%
                        fill #A0ADBF
                        transform translateY(-50%)
                        svg
                            transform rotate(-90deg)
                ul
                    display none

    @media (min-width: 375px)
        &__phone
            padding-left 18px
        &__burger
            margin-left 23px
        .social-links
            padding 0 14px
            &__item
                margin-right 22px

    @media (min-width: $mq.md)
        &__search
            flex 1
            display block
            border 1px solid rgba(#C1C1C1, 0.7);
            height 40px
            border-radius 10px
            margin-right 22px
            display flex
            padding-left 5px
            align-self: center;
            button
                width 32px
                background none
                border 0
                background url("data:image/svg+xml,%3Csvg width='18' height='18' viewBox='0 0 18 18' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill-rule='evenodd' clip-rule='evenodd' d='M18 8C18 12.4183 14.4183 16 10 16C8.15129 16 6.44904 15.3729 5.09436 14.3199L1.70711 17.7071C1.31658 18.0976 0.683417 18.0976 0.292893 17.7071C-0.0976311 17.3166 -0.0976311 16.6834 0.292893 16.2929L3.68014 12.9056C2.62708 11.551 2 9.84871 2 8C2 3.58172 5.58172 0 10 0C14.4183 0 18 3.58172 18 8ZM16 8C16 11.3137 13.3137 14 10 14C6.68629 14 4 11.3137 4 8C4 4.68629 6.68629 2 10 2C13.3137 2 16 4.68629 16 8Z' fill='%23222222'/%3E%3C/svg%3E") center center no-repeat
                background-size 18px 18px
                margin-right 2px
            input
                border 0
                height 100%
                width 100%
                padding-right 10px
                background none
                font-size 16px
                color #000
                font-weight 300
                outline none
                &::placeholder
                    color #B8B8B8

    @media (min-width: $mq.lg)
        z-index 1
        &__burger
            display none
        &__address-box
            display flex
            align-items center
            border-left 1px solid #D8D8D8
            padding-left 14px
            margin-left 14px
        &__address
            font-size 13px
            width 140px
            display flex
            color #000
            margin-left 10px
            &:first-child
                margin-left 0
            &-icon
                flex none
                margin-right 8px
                .svg-icon
                    display block
                    width 14px
                    height 17px
                    fill #71DD49
        &__search
            margin-right 14px
        .social-links
            &__item
                margin-right 17px
    @media (min-width: $mq.lg)
        padding-top 73px
        &__content
            position absolute
            left 0
            top 0
            right 0
        &__top
            &-in
                height 73px
        &__address-box
            order 3
            margin-left 17px
        &__address
            font-size 14px
            font-weight 400
        &__phone
            font-size 17px
            font-weight 500
            padding-left 0
            border 0
            order 1
            .svg-icon
                display none
            a
                text-decoration none
                color #000
        .social-links
            order 2
            border 0
            padding-right 0
            padding-left 0
            margin-left 18px
        &__menu
            display block
            line-height 0.8
            > ul
                margin-left 0
                margin-right 0
                border-bottom:1px solid #09BA8F;
                padding-left 0
                padding-right 0
                display flex
                position relative
                white-space normal
                overflow-x visible
                &:after
                    display none
                > li
                    // flex-grow 1
                    margin-right 0
                    display block
                    &.has-child
                        > a
                            padding-right 25px
                    &:hover
                        > a
                            color #71DD49
                        > ul
                            display flex
                    > a
                        color #fff
                        font-size 14px
                        text-decoration none
                        position relative
                        display inline-flex
                        padding-left 5px
                        align-items center
                        padding-right 10px
                        padding-top 10px
                        padding-bottom 13px
                        min-height 65px
                        .svg-icon
                            width 12px
                            height 6px
                            position absolute
                            right 7px
                            top 48%
                            fill #A0ADBF
                            transform translateY(-50%)
                            svg
                                transform rotate(0)

                    > ul
                        position absolute
                        left 0
                        top 100%
                        right 0
                        background #fff
                        display none
                        flex-wrap wrap
                        padding 20px 20px 20px 0
                        border-top: 1px solid #09BA8F;
                        &:before
                            content ''
                            position fixed
                            left 0
                            top 0
                            right 0
                            bottom 0
                            background rgba(#000, 0.7)
                            z-index -1
                            pointer-events none
                        > li
                            width 20%
                            padding-left 20px
                            > a
                                display block
                                text-decoration none
                                &:hover
                                    .mn-item-name
                                        color #71DD49
                                    .mn-item-note
                                        color #000
                                .mn-item-container
                                    display block
                                    position relative
                                    margin-bottom 18px
                                    img
                                        display block
                                        width 100%
                                .mn-item-name
                                    position absolute
                                    left 15px
                                    bottom 15px
                                    color #fff
                                    font-size 14px
                                    display flex
                                    align-items center
                                    min-height 25px
                                    transition 0.3s ease color
                                .mn-item-note
                                    color #868686
                                    font-size 12px
                                    display block
                                    line-height 1.2
                                    transition 0.3s ease color

    @media (min-width: $mq.xl)
        &__logo
            width auto
            padding-right 44px
            a, img
                width 189px
        &__phone
            font-size 20px
            padding-left 0
        &__address-box
            padding-left 30px
            margin-left 30px
        &__address
            font-size 15px
            font-weight 500
            width 170px
            &-icon
                margin-right 18px
                padding-top 4px
                .svg-icon
                    width 18px
                    height 21px
        &__search
            margin-right 0
            height 51px

        .social-links
            margin-left 28px
            &__item
                margin-right 19px
        &__phone
            margin-left 33px
        &__menu
            > ul
                justify-content flex-start
                > li
                    flex-grow 1
                    > a
                        font-size 15px
                        font-weight 500
                    > ul
                        > li
                            > a
                                .mn-item-name
                                    font-size 15px
                                    font-weight 500
                                    padding-right 20px
                                    bottom 17px
                                    left 18px

    @media (min-width: $mq.xxl)
        &__search
            padding-left 15px
            button
                margin-right 12px
        &__menu
            padding-left 37px
            padding-right 37px
            > ul
                > li
                    flex-grow 0
                    &:last-child
                        margin-right 0
                    &.has-child
                        > a
                            padding-right 18px
                    > a
                        padding-left 31px
                        padding-right 16px
                        font-size 16.5px
                        .svg-icon
                            right 0
                            top 48.5%
                    > ul
                        padding 35px 30px 25px 0
                        > li
                            padding-left 30px
                            > a
                                .mn-item-container
                                    height 120px
                                    img
                                        width 100%
                                        height 100%
                                        object-fit cover
                                .mn-item-name
                                    font-size 16.5px
                                .mn-item-note
                                    font-size 15px
    @media (min-width: $mq.xxxl)
        &__address
            width 201px
    @media (min-width: $mq.sd)
        &__menu
            > ul
                > li
                    > a
                        font-size 19px
                        padding-right 17px
                        .svg-icon
                            top 51%
                    > ul
                        > li
                            > a
                                .mn-item-name
                                    font-size 20px

.header
    &__fixed
        position fixed
        z-index 10
        left 0
        top 0
        right 0
        display none
        transform translateY(-110%)
        transition 0.3s ease transform
        &.visible
            transform translateY(0)
        &-in
            box-shadow: 0px 4px 13px rgba(35, 42, 49, 0.08);
            background #fff
            z-index 1
        &-content
            display flex
            align-items center
            width 100%
        & ^[0]
            &__logo
                display none
            &__menu
                width 100%
                > ul
                    border 0
                    white-space normal
                    overflow-x: visible;
                    position static
                    justify-content center
                    flex 1
                    > li

                        line-height 0.9
                        &:first-child
                            a
                                padding-left 0
                        > a
                            // display inline
                            color #000
                            align-items center
                            padding 20px 0 20px
                            min-height 62px
                            flex none
                            .svg-icon
                                top 52%
                        > ul
                            &:before
                                bottom auto
                                height 100vh
        .social-links
            display none
        @media (min-width: $mq.lg)
            display block
        @media (min-width: $mq.xl)
            & ^[0]
                &__logo
                    display block
                    padding-right 0
                    width 140px
                    margin-right 20px
                    a, img
                        width 100%
                &__menu
                    > ul
                        justify-content flex-start
        @media (min-width: $mq.xxl)
            & ^[0]
                &__logo
                    width 169px
                &__menu
                    padding-left 0
                    padding-right 0
                    > ul
                        > li
                            &:last-child
                                margin-right 0
                            > a
                                padding-left 12px
                                font-size 15px
                                font-weight 500
                                .svg-icon
                                    right 0
                            > ul
                                max-width 1920px
                                left 37px
                                right 37px
                                margin-left auto
                                margin-right auto
            .social-links
                display flex
                margin-left 0

        @media (min-width: $mq.xxxl)
            &-content
                min-height 73px

            & ^[0]
                &__logo
                    margin-right 46px
                &__menu
                    > ul
                        > li
                            > a
                                padding-left 17px
                                min-height 73px
            .social-links
                &__item
                    margin-right 25px
                    img
                        width 27px
                        max-width 20px
        @media (min-width: $mq.sd)
            & ^[0]
                &__menu
                    > ul
                        > li
                            > a
                                padding-left 25px
                                font-size 17px
                                .svg-icon
                                    top 54%

        @media (min-width: 1921px)
            & ^[0]
                &__menu
                    > ul
                        > li
                            > ul
                                left 50%
                                margin-left -923px
                                width 100%
                                max-width 1845px
                                // transform translateX(-50%)
                                right auto
