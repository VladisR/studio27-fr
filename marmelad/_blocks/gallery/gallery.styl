.gallery
    margin-bottom 25px
    &__item
        margin-bottom 13px
        img
            display block
            width 100%
    @media (min-width: $mq.md)
        display flex
        flex-wrap wrap
        margin-left -20px
        margin-bottom 10px
        &__item
            width 50%
            padding-left 20px
        &.type-2
            & ^[0]
                &__item
                    width 33.33%

    @media (min-width: $mq.lg)
        margin-bottom 20px

    @media (min-width: $mq.xxl)
        margin-bottom 35px
        margin-left -52px
        &__item
            padding-left 52px
        &.type-2
            margin-left -43px
            & ^[0]
                &__item
                    padding-left 43px
