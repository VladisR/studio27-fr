.intro
    position relative
    margin-bottom 15px
    &__image
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        object-fit cover
        z-index -1
    &__in
        display flex
        flex-direction column
        justify-content flex-end
        padding-top 80px
        position relative
        min-height 351px
        color #fff
        padding-bottom 36px
    &__title
        font-size 32px
        color #fff
        text-align left
        font-weight 300
        margin-bottom 7px
        max-width 305px
        strong
            font-weight 500
    &__text
        font-size 14px
        font-weight 300

    &__link
        margin-top 10px
        width 36px
        height 31px
        border-radius: 5px;
        display flex
        align-items center
        position relative
        justify-content center

    @media (min-width: $mq.lg)
        &__in
            min-height 538px
            padding-top 120px
            padding-bottom 134px
        &__content
            padding-left 60px
        &__title
            font-size 71px
            max-width 858px
            margin-bottom 28px
        &__text
            font-size 21px
            line-height 0.9
        &__link
            margin-top 27px
            width 49px
            height 42px
            border-radius 10px
            .svg-icon
                width 18px
                height 10px
