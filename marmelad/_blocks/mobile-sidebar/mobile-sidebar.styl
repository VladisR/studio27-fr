.mobile-sidebar
    position fixed
    left 0
    top 0
    right 0
    width 100%
    height 100vh
    pointer-events none
    z-index 100
    &:before
        content ""
        position absolute
        left 0
        top 0
        right 0
        bottom 0
        background rgba(#000, 0.2)
        opacity 0
        transition 0.2s ease opacity

    &__close
        position absolute
        right 0
        padding-left 1px
        top 0
        display flex
        justify-content center
        align-items center
        width 65px
        height 53px
        background: linear-gradient(99.65deg, #B8D217 -24.21%, #09BA8F 91.89%);
        z-index 1
        .svg-icon
            pointer-events none
            width 20px
            display block
            color #fff

    &__container
        position fixed
        padding-top 18px
        overflow hidden
        left 0
        top 0
        bottom 0
        right 0
        max-width 575px
        transition 0.2s ease transform
        transform translateX(-100%)
    &__content
        background #fff
        position absolute
        left 0
        top 0
        right 65px
        bottom 0
        padding-top 20px
        padding-bottom 20px
        overflow-y auto
        color #000
        display flex
        flex-direction column
    &__top
        flex none
    &__title
        font-family $font2
        color #000
        padding-left 15px
        margin-bottom 6px
        &:first-child
            margin-bottom 17px
    &.opened
        visibility visible
        pointer-events auto
        &:before
            opacity 1
        & ^[0]
            &__container
                transform translateX(0)
    &__footer
        padding 24px 15px 0
        position relative
        flex none
        margin-top auto
        &:after
            content ''
            position absolute
            left 0
            top 0
            right 0
            height 2px
            background: linear-gradient(99.65deg, #B8D217 -24.21%, #09BA8F 91.89%);

    &__phone
        font-size 21px
        font-weight 500
        margin-bottom 20px
        a
            color #000
            text-decoration none

    &__address
        display flex
        margin-bottom 17px
        font-size 15px
        font-weight 400
        &:last-child
            margin-bottom 0
        .svg-icon
            flex none
            width 18px
            height 20px
            margin-right 11px
            fill #71DD49

    @media (min-width: $mq.lg)
        display none
