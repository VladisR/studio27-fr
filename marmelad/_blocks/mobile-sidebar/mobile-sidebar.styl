.mobile-sidebar
    position fixed
    left 0
    top 0
    right 0
    width 100%
    height 100vh
    pointer-events none
    z-index 100
    &:before
        content ""
        position absolute
        left 0
        top 0
        right 0
        bottom 0
        background rgba(#000, 0.2)
        opacity 0
        transition 0.2s ease opacity

    &__close
        position absolute
        right 0
        padding-left 1px
        top 0
        display flex
        justify-content center
        align-items center
        width 65px
        height 53px
        background: linear-gradient(99.65deg, #B8D217 -24.21%, #09BA8F 91.89%);
        z-index 1
        .svg-icon
            pointer-events none
            width 20px
            display block
            color #fff

    &__container
        position fixed
        padding-top 18px
        overflow hidden
        left 0
        top 0
        bottom 0
        right 0
        max-width 480px
        transition 0.2s ease transform
        transform translateX(-100%)
    &__content
        background #fff
        position absolute
        left 0
        top 0
        right 65px
        bottom 0
        padding-top 18px
        padding-bottom 18px
        overflow-y auto

    &.opened
        visibility visible
        pointer-events auto
        &:before
            opacity 1
        & ^[0]
            &__container
                transform translateX(0)


    @media (min-width: $mq.lg)
        display none
