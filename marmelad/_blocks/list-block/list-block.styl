.list-block
    position relative
    z-index 1
    background #192329 url(../img/list-block-bg.jpg) 0 bottom no-repeat
    &__in
        padding-top 27px
        padding-bottom 24px
    &__head
        margin-bottom 23px
        display flex
        align-items center
        flex-wrap wrap
        &-row
            width 100%
            display flex
            align-items center
            img
                margin-top -3px
                margin-left 15px
                max-width 31px
    &__title
        color #fff
        margin-bottom 0

    .link
        display none

    @media (min-width: $mq.md)
        .link
            display inline-flex
    @media (min-width: $mq.lg)
        &__in
            padding-top 75px
            padding-bottom 50px
        &__head
            margin-bottom 65px
            &-row
                img
                    max-width 39px
                    margin-top -5px
        &__title
            max-width 561px
            margin-bottom 0

    @media (min-width: $mq.xxl)
        &__in
            padding-bottom 100px

.list-block
    &.type-2
        background none
        & ^[0]
            &__in
                padding-bottom 27px
            &__title
                color #000
                max-width none

            &__overtitle
                display block
                font-size 18px
                font-family $fonts.base
                font-weight 300
                margin-top 12px
            @media (min-width: $mq.lg)
                &__in
                    padding-bottom 50px
            @media (min-width: $mq.xxl)
                &__in
                    padding-bottom 60px
        @media (min-width: $mq.xxl)
            .swiper-parent .swiper
                padding-right 120px

.list-block
    &.type-3
        background #fff
        padding 26px 20px 7px
        margin-bottom 20px
        & ^[0]
            &__title
                color #000
                font-size 20px
                margin-bottom 30px
            @media (min-width: $mq.lg)
                &__title
                    font-size 37px
                    margin-bottom 42px

        @media (min-width: $mq.lg)
            margin-bottom 90px
            padding 30px 30px 26px
        @media (min-width: $mq.xxl)
            padding 58px 60px 26px

.list-block
    &.type-4
        background none
        padding 0
        margin-bottom 43px
        & ^[0]
            &__title
                color #000
                font-family $fonts.base
                font-size 26px
                margin-bottom 17px
                font-weight 400

            @media (min-width: $mq.md)
                &__title
                    font-size 37px
                    margin-bottom 30px
            @media (min-width: $mq.lg)

                &__title
                    font-size 59px
                    margin-bottom 44px
                    max-width none

        @media (min-width: $mq.lg)
            margin-bottom 35px

.list-block
    &.type-5
        margin-bottom 10px
        & ^[0]
            &__in
                padding-top 20px

.cols-md-2
    @media (min-width: $mq.md)
        display flex
        flex-wrap wrap
        margin-left -20px
        > *
            width 50%
            padding-left 20px
    @media (min-width: $mq.xl)
        margin-left -37px
        > *
            padding-left 37px


.cols-xxl-3
    @media (min-width: $mq.xxl)
        margin-left -37px
        > *
            width 33.33%
            padding-left 37px
