.description
    margin-bottom 37px
    font-size 17px
    &__title
        font-family $fonts.base
        padding-bottom 13px
        position relative
        margin-bottom 16px
        font-size 17px
        font-weight 400
        line-height 1.1
        margin-top 0
        &:after
            content ''
            position absolute
            left 0
            bottom 0
            right 0
            height 1px
            background: linear-gradient(79.99deg, #DBFF00 -34.26%, #09BA8F 72.3%);

    @media (min-width: $mq.md)
        margin-bottom 50px
        &__title
            font-size 25px
            padding-bottom 24px
            margin-bottom 21px

    @media (min-width: $mq.xl)
        margin-bottom 89px
        font-size 25px
        &__title
            margin-bottom 37px
        &__text
            padding-right 130px
