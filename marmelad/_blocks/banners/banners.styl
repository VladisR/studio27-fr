.banners
    white-space nowrap
    overflow-x auto
    margin-left -20px
    padding-left 5px
    margin-right -20px
    padding-right 20px
    margin-bottom 26px
    font-size 0
    &::-webkit-scrollbar
        display none

    scrollbar-height none
    -ms-overflow-style: none;
    .banner
        display inline-block
        padding-left 15px
        width 88%
        vertical-align middle
    @media (min-width: $mq.md)
        display flex
        flex-wrap wrap
        margin-bottom 11px
        white-space normal
        .banner
            width 50%
            margin-bottom 15px
            &__in
                height 100%
    @media (min-width: $mq.lg)
        margin-top -92px
        margin-left -30px
        margin-bottom 20px
        .banner
            margin-bottom 30px
            padding-left 30px

.banner
    &__in
        padding 36px 24px 23px
        position relative
        min-height 173px
    &__image
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        object-fit cover
    &__container
        position relative
        color #fff
        white-space normal
        max-width 168px
    &__title
        font-size 18px
        letter-spacing: -0.02em;
        font-weight 400
    &__link
        margin-top 32px
        display inline-flex
        align-items center
        color #9FEC2A
        text-decoration none
        font-size 14px
        &:hover
            .site-button
                &:after
                    opacity 1
        .site-button
            margin-left 9px
            width 30px
            height 25px
            border-radius 8px
    @media (min-width: $mq.lg)
        margin-bottom 30px
        &__in
            padding 55px 57px 48px
            position relative
            &:after
                content ''
                position absolute
                right 0
                top 0
                height 6px
                width 264px
                background: linear-gradient(99.65deg, #DBFF00 -24.21%, #09BA8F 91.89%);
                border-radius: 0 0 0 50px;
        &__container
            max-width 204px
        &__title
            font-size 22px
        &__link
            margin-top 20px
            font-size 16px
            .site-button
                width 40px
                height 34px
                margin-left 14px
                .svg-icon
                    width 16px
                    height 9px

.banners
    &.type-2
        overflow-x visible
        display block
        margin-bottom 25px
        padding-left 0
        margin-left 0
        margin-right 0
        padding-right 0
        position relative
        &:after
            content ''
            position absolute
            bottom 0
            z-index 1
            height 6px
            width 20px
            left -20px
            background #fff
        &:before
            content ''
            position absolute
            bottom 0
            z-index 1
            height 6px
            width 20px
            right -20px
            background #fff
    &__items
        overflow-x auto
        padding-bottom 13px
        font-size 0
        margin-left -20px
        margin-right -20px
        padding-right 5px
        padding-left 20px
        &::-webkit-scrollbar
            height 6px
        &::-webkit-scrollbar-thumb { height: 50px; background-color: #D5D5D5;}

        .banner
            padding-left 0
            padding-right 15px

    @media (min-width: $mq.md)
        .banner
            margin-bottom 20px
        &__items
            display flex
            flex-wrap wrap
            overflow visible

    @media (min-width: $mq.lg)
        &.type-2
            margin-top 0
            padding-right 0
            margin-bottom 49px
        &__items
            padding-right 0
            margin-right 0
            margin-left -30px
            padding-left 0
            padding-bottom 0

        .banner
            padding-right 0
