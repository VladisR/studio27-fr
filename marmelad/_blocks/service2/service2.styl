.service2
    margin-bottom 17px
    &__in
        height 100%
        display block
        position relative
        text-decoration none
        &:hover
            & ^[0]
                &__title
                    color #71DD49
                &__image
                    transform scale(1.04)
            .site-button
                &:after
                    opacity 1

    &__container
        display flex
        min-height 147px
        padding 20px 33px 17px 20px
        margin-bottom 15px
        position relative
        align-items flex-end
        overflow hidden

    &__image
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        object-fit cover
        transition 0.3s ease transform
    &__title
        font-size 19px
        color #fff
        position relative
        margin-right 20px
        font-weight 400
        margin-bottom 5px
        line-height 0.9
        transition 0.3s color
    &__text
        display block
        color: #868686;

    .site-button
        width 39px
        height 31px
        margin-left auto
        flex none
        .svg-icon
            width 22px
            height 11px
    @media (min-width: $mq.sm)
        &__container
            min-height 209px

    @media (min-width: $mq.lg)
        margin-bottom 45px
        &__title
            font-size 28px
        &__container
            padding 25px 32px 24px 27px
            margin-bottom 17px
        .site-button
            width 56px
            height 44px
            .svg-icon
                width 27px
                height 15px
        &__text
            font-size 15px
    @media (min-width: $mq.hd)
        &__container
            min-height 250px

.service2
    &.type-2
        @media (min-width: $mq.lg)
            & ^[0]
                &__title
                    font-size 30px
                    max-width 280px
                    letter-spacing: -0.03em;
