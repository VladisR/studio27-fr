.advantages
    background #fff
    padding 22px 26px 1px
    margin-bottom 43px
    &__item
        margin-bottom 28px
        &-image
            position relative
            &:before
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                height: 4px;
                width: 131px;
                background: linear-gradient(99.65deg, #dbff00 -24.21%, #09ba8f 91.89%);
                border-radius: 0 0 50px 0;
            &:after
                content ''
                position absolute
                left 0
                top 0
                bottom 0
                right 0
                background url(../img/adv-item-bg.png) center bottom no-repeat
                background-size 100%
            img
                display block
                width 100%
        &-name
            margin-top 13px
            font-weight 400
            font-size 16px
            color #000
            line-height 1
        &-desc
            margin-top 13px
            color: #727272;
            font-size 11px
            max-width 200px
            line-height 1.1
    @media (min-width: $mq.md)
        padding-top 32px
        &__item
            &-name
                font-size 25px
            &-desc
                font-size 16px
                max-width 280px

    @media (min-width: $mq.lg)
        padding 32px 30px 12px
        margin-bottom 70px
        &__title
            font-size 35px
            margin-bottom 40px
        &__items
            display flex
            flex-wrap wrap
            margin-left -30px
        &__item
            padding-left 30px
            width 33.33%
            &-name
                margin-top 16px
            &-desc
                margin-top 22px

    @media (min-width: $mq.xl)
        &__item
            &-image
                &:before
                    width 203px
                    height 6px
    @media (min-width: $mq.xxl)
        padding 43px 43px
        &__items
            margin-left -46px
        &__item
            padding-left 46px
