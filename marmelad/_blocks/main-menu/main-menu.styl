.main-menu
    &.mobile
        > ul
            > li
                border-top 1px solid rgba(#000, 0.2)
                border-bottom 1px solid rgba(#000, 0.2)
                margin-bottom -1px
                &.is-opened
                    > a
                        background $colorPrimary
                        color #fff
                        .m-tgl
                            border-left-color rgba(#fff, 0.4)
                            &:before,
                            &:after
                                background #fff

                > a
                    display block
                    text-decoration none
                    padding 12px 15px
                    position relative
                    font-size 20px
                    color #000
                    padding-right 55px
        ul
            li
                a
                    text-decoration none
                    position relative
                    .m-tgl
                        position absolute
                        right 0
                        top 0
                        bottom 0
                        width 50px
                        border-left 1px solid rgba(#000, 0.12)
                        background rgba(#000, 0.1)
                        &:before,
                        &:after
                            content ""
                            position absolute
                            left 50%
                            top 50%
                            transform translate(-50%, -50%)
                            background #000
                        &:before
                            width 17px
                            height 2px
                        &:after
                            width 2px
                            height 17px

                ul
                    padding 0 20px 20px 30px
                    display none
                    li
                        margin-bottom 7px
                        &:first-child
                            margin-top 14px
                        &:last-child
                            margin-bottom 0
                        a
                            display block
                            font-size 17px
                            .m-tgl
                                background none
                                border 0
                                width 12px
                                height 12px
                                &:before
                                    width 14px
                                &:after
                                    height 14px

                        ul
                            padding 0 20px 0 14px
                            li
                                &:first-child
                                    margin-top 12px
                                &:last-child
                                    margin-bottom 10px
                                a
                                    font-size 15px
        .is-opened
            > a > .m-tgl
                &:after
                    display none

    &.desctop
        ul
            display flex
            flex-wrap wrap
            li
                position relative
                &:hover
                    > ul
                        display block
                a
                    display block
                    padding 7px 12px
                ul
                    display none
                    position absolute
                    left 0
                    top 100%
                    width 220px
                    background #fff
                    box-shadow 0 0 10px rgba(#000, 0.2)
                    li
                        a
                            {}
                        ul
                            left 100%
                            top 0
