.main-menu
    margin-bottom 20px
    > ul
        > li
            position relative
            &:after
                content ''
                position absolute
                left 0
                bottom 0
                right 0
                height 1px
                background: linear-gradient(99.65deg, #B8D217 -24.21%, #09BA8F 91.89%);
                opacity 0.2
            &:last-child
                &:after
                    display none
            > a
                display block
                padding 10px 20px 10px 51px
                position relative
                font-size: 17px;
                line-height: 1.2;
                text-decoration none
                color #000
                font-weight 500
        > li
            ul
                padding 1px 0 1px 51px
                li
                    margin-bottom 15px
                    padding-right 25px
                    &:first-child
                        margin-top 10px
                    &:last-child
                        margin-bottom 23px
                    a
                        display inline-block
                        font-size 16px
                        font-weight 400
                        line-height 0.99
                        text-decoration none
                        color #000
        li
            ul
                display none


    .m-tgl
        position absolute
        left 14px
        top 50%
        transform translateY(-50%)
        width 22px
        height 22px
        display flex
        padding-left 1px
        align-items center
        justify-content center
        border 1px solid #CECECE
        border-radius 50px
        .svg-icon
            width 6px
            height 11px
            fill $colorAccent
    .has-child
        .m-tgl
            padding-left 0
            padding-top 1px
            .svg-icon
                transform rotate(90deg)

    .is-opened
        .m-tgl
            padding-top 0
            padding-bottom 1px
            border-color transparent
            background: linear-gradient(99.65deg, #B8D217 -24.21%, #09BA8F 91.89%);
            .svg-icon
                fill #fff
                transform rotate(-90deg)
