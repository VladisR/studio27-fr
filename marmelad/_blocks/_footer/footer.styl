.footer
    flex none
    background #010101 url(../img/footer-bg.jpg) center bottom no-repeat
    background-size cover
    color #fff
    &__content
        padding-top 31px
        padding-bottom 38px
    &__title
        font-family $font2
        margin-bottom 30px
        font-size: 21px;
        line-height 0.9
        letter-spacing: -0.01em;
        color rgba(#fff, 0.59)
    &__menu
        margin-bottom 35px
        > ul
            > li
                margin-bottom 20px
                &.has-child
                    > a
                        .m-tgl
                            .svg-icon
                                margin-top 2px
                                transform rotate(90deg)
                &.is-opened
                    > a
                        .m-tgl
                            background: linear-gradient(99.65deg, #B8D217 -24.21%, #09BA8F 91.89%);
                            border-color transparent
                            .svg-icon
                                margin-top 0
                                transform rotate(-90deg)

                > a
                    color #fff
                    text-decoration none
                    font-size: 19px;
                    font-weight 500
                    position relative
                    display inline-block
                    padding-left 36px
                    letter-spacing: -0.01em;
                    .m-tgl
                        top -3px
                        position absolute
                        left 0
                        width 25px
                        height 25px
                        border: 1px solid rgba(#CECECE, 0.5);
                        border-radius 500px
                        display flex
                        align-items center
                        justify-content center
                        .svg-icon
                            width 6px
                            height 11px
                            fill #fff
                > ul
                    display none
                    padding-left 36px
                    padding-bottom 1px
                    li
                        margin-bottom 8px
                        &:first-child
                            margin-top 20px
                        &:last-child
                            margin-bottom 6px
                        a
                            text-decoration none
                            font-size 16px
                            color #fff
    &__contacts
        padding-top 26px
        border-top 1px solid #fff

    &__phone
        margin-bottom 20px
        font-size 21px
        a
            color #fff
            text-decoration none
            font-weight 500
    &__address
        display flex
        justify-content space-between
        margin-bottom 22px
        &-item
            width 50%
            max-width 155px
            font-size 15px
            line-height: 21px;
    .social-links
        margin-bottom 18px
        &__item
            margin-right 7px
    &__copyright
        color: #E3E3E3;
        font-size 14px

    @media (min-width: $mq.md)
        &__content
            padding-top 40px
        &__menu
            > ul
                display flex
                flex-wrap wrap
                > li
                    width 50%
                    padding-right 20px
                    > a
                        padding-left 0
                        .m-tgl
                            display none
                    > ul
                        padding-left 20px

    @media (min-width: $mq.lg)
        &__content
            padding-top 75px
            padding-bottom 55px
        &__title
            font-size 28px
            margin-bottom 48px
        &__menu
            > ul
                > li
                    margin-bottom 33px
                    > ul
                        padding-top 17px
                        display block
                        li
                            margin-bottom 1px
                            line-height 0.9
                            &:first-child
                                margin-top 0
                            &:last-child
                                margin-bottom 0
                            a
                                display inline
                                color #A4A4A4
            &.simple
                > ul
                    display block
                    > li
                        width auto
                        margin-bottom 6px

        &__contacts
            padding-top 50px

        &__address
            &-item
                color: #A4A4A4;

    @media (min-width: $mq.xl)
        &__content
            display flex
            flex-wrap wrap
            padding-bottom 88px
        &__container
            flex 1
        &__menu
            margin-bottom 0
            &.simple
                margin-bottom 30px
        &__col
            margin-left 40px
            padding-left 40px
            width 350px
            flex none
            border-left 1px solid #424D60
        &__contacts
            border-color #424D60
            padding-top 30px
        &__address
            margin-bottom 25px
        &__copyright
            display none
            &--desctop
                display block
                width 100%
                margin-top 19px

    @media (min-width: $mq.xxl)
        &__col
            padding-left 69px
            flex 0 0 392px

    @media (min-width: $mq.xxxl)
        &__menu
            > ul
                > li
                    width 32.5%
