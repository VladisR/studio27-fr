.site-button
    position relative
    display inline-flex
    justify-content center
    align-items center
    overflow hidden
    background: linear-gradient(99.65deg, #B8D217 -24.21%, #09BA8F 91.89%);
    box-shadow: 0px 1.93007px 7.72028px rgba(0, 0, 0, 0.07);
    padding 13px 26px 13px
    font-size 16px
    font-weight 500
    text-decoration none
    color #fff
    z-index 1
    border 0
    outline none
    cursor pointer

    .svg-icon
        width 14px
        height 8px
        fill #fff
        transition 0.3s ease fill

    &:after
        content ''
        opacity 0
        position absolute
        transition 0.3s ease opacity
        left 0
        top 0
        right 0
        bottom 0
        background: linear-gradient(-99.65deg, lighten(#DBFF00, 1%) -74.21%, lighten(#09BA8F, 2%) 91.89%);
        z-index -1

    &.arrow
        padding 0
        border-radius: 5px;

    &.type-2
        background none
        border 1px solid #09BA8F
        color #09BA8F
        box-shadow none
        .svg-icon
            width 15px
            height 26px
            margin-left 45px
            fill #09BA8F
    &:hover
        opacity 1
        color #fff
        &:after
            opacity 1

        .svg-icon
            fill #fff
    @media (min-width: $mq.lg)
        padding 18px 39px 20px
        font-size 25px
        &.arrow
            border-radius 10px
