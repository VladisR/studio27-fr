.list-block3
    margin-bottom 20px
    &__title
        font-size 29px
        margin-bottom 32px
        font-weight 400
        color #000
    &__item
        margin-bottom 33px
        &-image
            margin-bottom 19px
            img
                display block
                width 100%
        &-text
            font-size 15px
            letter-spacing: -0.03em;
            max-width 303px
    @media (min-width: $mq.md)
        &__title
            font-size 40px
        &__item
            &-text
                font-size 20px
    @media (min-width: $mq.lg)
        &__items
            display flex
            margin-left -35px
            display flex
            flex-wrap wrap
        &__item
            width 50%
            padding-left 35px
            &-image
                margin-bottom 30px
            &-text
                font-size 25px
                max-width 525px
    @media (min-width: $mq.xl)
        &__title
            margin-bottom 50px
            font-size 60px

        &__item
            &-text {}
