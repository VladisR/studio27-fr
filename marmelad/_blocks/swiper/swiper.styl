.swiper {}

.swiper-button
    width 61px
    height 40px
    display flex
    align-items center
    justify-content center
    display none
    border-radius 100px
    background: #FFFFFF;
    box-shadow: 0px 4px 16px rgba(0, 0, 0, 0.07);
    border-radius: 100px;
    .svg-icon
        width 23px
        height 13px
        fill #46C366
    &:after
        display none
    &:hover
        background: linear-gradient(99.65deg, #DBFF00 -24.21%, #09BA8F 91.89%);
        .svg-icon
            fill #fff
.swiper-scrollbar
    background none


.swiper-button-prev
    left 29px
.swiper-button-next
    right 40px

.swiper-horizontal>.swiper-scrollbar
    height 6px
    left 0
    position static
    margin-top 30px

.swiper-scrollbar-drag
    border-radius 0
    background #6E8C7D

.swiper-scrollbar.color2
    .swiper-scrollbar-drag
        background #D5D5D5


.swiper-parent
    .swiper
        margin-left -20px
        margin-right -20px
        padding-left 20px
        padding-right 33px
        overflow hidden
        @media (min-width: 375px)
            padding-right 94px
.swiper-scrollbar
    height 6px
    margin-top 30px
    .swiper-scrollbar-drag
        background #6E8C7D

.swiper-button-wrapper
    position relative
    width 166px
    display flex
    align-items center
    justify-content space-between
    margin-left auto
    .swiper-button
        position static
        margin 0
        width 76px
        height 51px
        background none
        border 2px solid #43CD68
        &:hover
            border-color transparent
            background: linear-gradient(99.65deg, #B8D217 -24.21%, #09BA8F 91.89%);
            .svg-icon
                fill #fff


.swiper-pagination
    position static
    margin-top 42px
    font-size 0
    display none

.swiper-pagination-bullet
    width 10px
    height 8px
    margin-left 4px !important
    margin-right 4px !important
    border-radius 10px
    background rgba(#000, 0.9)

.swiper-pagination-bullet-active
    width 23px
    background #000

.white
    .swiper-pagination-bullet
        background rgba(#FFF, 0.5)
    .swiper-pagination-bullet-active
        background #fff

@media (min-width: $mq.lg)
    .swiper-parent
        .swiper
            margin-left -30px
            padding-left 30px
            margin-right -30px
            padding-right 80px
    .swiper-button-wrapper
        display flex
    .swiper-button
        display flex
    .swiper-scrollbar
        display none
    .swiper-pagination
        display block
@media (min-width: $mq.xxl)
    .swiper-parent
        .swiper
            margin-left -67px
            padding-left 67px
            margin-right -67px

    .swiper-scrollbar
        display none
        margin-top 74px

    .list-block.type-2
        .swiper-button
            margin-top -2.5%
    .desctop-visible
        display block
    .desctop-hide
        display none
@media (min-width: 1921px)
    .swiper-parent
        .swiper
            padding-left 0
            padding-right 0
            margin-left 0
            margin-right 0
    .list-block.type-2
        .swiper-parent
            position relative
            padding-right 70px
            padding-left 70px
            .swiper
                padding-left 0
                padding-right 0
                margin-left 0
                margin-right 0
        .swiper-parent .swiper
            padding-right 0
        .swiper-button
            margin-top -6.5%
        .swiper-button-prev
            left 0
        .swiper-button-next
            right 0
